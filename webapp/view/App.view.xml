<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto"> <!-- class sapUiResponsiveMargin that will add some space around the panel -->
                            <content>
                                <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" /> <!-- space between the button and the input field by adding class sapUiSmallMarginEnd -->
                                <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
                                <Text text="Hello {/recipient/name}" class="sapUiSmallMargin" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
